@using MVCWebApp.DTOs
@model ComicBookDTO

<form asp-action="ComicBookDelete">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Delete ComicBook</h1>
        <input asp-for="ComicBookId" hidden />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Title</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ComicBookTitle" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Year of Release</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ComicBookYearOfRelease" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">ISBN</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ComicBookISBN" disabled class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="ComicBookIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>

        </div>

        <div>
        </div>
    </div>
</form>

