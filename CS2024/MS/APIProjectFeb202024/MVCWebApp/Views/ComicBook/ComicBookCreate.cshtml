@using MVCWebApp.DTOs
@model ComicBookDTO

<form asp-action="ComicBookCreate">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Add Comic Book</h1>

        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Title</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ComicBookTitle" class="form-control" />
                <span asp-validation-for="ComicBookTitle" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Year of Release</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ComicBookYearOfRelease" class="form-control" />
                <span asp-validation-for="ComicBookYearOfRelease" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">ISBN</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ComicBookISBN" class="form-control" />
                <span asp-validation-for="ComicBookISBN" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">

                <a asp-action="ComicBookIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />

            </div>

        </div>

        <div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}